<div class="row">
  <div class="col-sm-3">
    <%= @memo.issued_date.strftime("%B %d, %Y") %>
  </div>
  <div class="col-sm-6 text-center">
    <h3><%= @memo.title %></h3>
  </div>
  <div class="col-sm-3 text-end">
    <a href="<%= @memo.url %>" target="_blank">View on ottawa.ca</a>
  </div>
</div>

<div class="row mt-3">
  <div class="col-sm-12">
    <strong>Department:</strong> <%= @memo.department %>
  </div>
</div>

<% if @memo.content.present? %>
<div class="row mt-4">
  <div class="col-sm-12">
    <h4>Content</h4>
    <div style="white-space: pre-wrap; line-height: 1.6;">
      <%= @memo.content.html_safe %>
    </div>
  </div>
</div>
<% end %>

<div class="row mt-3">
  <div class="col-sm-12">
    <%= link_to "← Back to All Memos", memo_index_path, class: "btn btn-secondary" %>
    <% if @memo.department.present? %>
      <%= link_to "View #{@memo.department} Memos", memo_index_path(department: @memo.department), class: "btn btn-outline-secondary" %>
    <% end %>
  </div>
</div>
